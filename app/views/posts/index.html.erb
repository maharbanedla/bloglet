<h1>Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Post Date</th>
    <th>Content</th>
    <th>Private</th>
    <th>Draft</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.created_at.to_s(:long) %></td>
    <td><%= post.content %></td>
    <td><%= check_box_tag 'private', 'is_private', post.private, :disabled =>true %></td>
    <td><%= check_box_tag 'draft', 'is_draft', post.draft, :disabled => true %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are ya sure?' } %></td>
  </tr>
<% end %>
</table>

